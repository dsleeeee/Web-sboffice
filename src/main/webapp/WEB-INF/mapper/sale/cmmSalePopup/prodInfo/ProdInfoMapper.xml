            PROD_NM,
            SALE_AMT,
            SALE_QTY,
            DC_AMT,
            REAL_SALE_AMT,
            TAX_SALE_AMT,
            VAT_AMT,
            NO_TAX_SALE_AMT
            FROM
            (
                SELECT
                <!-- 본사 -->
                <if test='orgnFg == "H"'>
                    tsmp.HQ_OFFICE_CD,
                </if>
                <!-- 매장 -->
                <if test='orgnFg == "S"'>
                    tsmp.STORE_CD,
                </if>
                tmp.PROD_CLASS_CD,
                tsmp.PROD_CD,
                tmp.PROD_NM,
                SUM(tsmp.TOT_SALE_QTY) AS SALE_QTY,
                SUM(tsmp.TOT_SALE_AMT) AS SALE_AMT,
                SUM(tsmp.TOT_DC_AMT) AS DC_AMT,
                SUM(tsmp.REAL_SALE_AMT) AS REAL_SALE_AMT,
                SUM(CASE WHEN tssd.VAT_FG = '1' THEN tssd.REAL_SALE_AMT ELSE 0 END) AS TAX_SALE_AMT,
                SUM(tssd.VAT_AMT) AS VAT_AMT,
                SUM(CASE WHEN tssd.VAT_FG = '2' THEN tssd.REAL_SALE_AMT ELSE 0 END) AS NO_TAX_SALE_AMT
                FROM
                <if test='gubun != "monthPos"'>
                    TB_SL_MONTHLY_PROD tsmp,
                </if>
                <if test='gubun == "monthPos"'>
                    TB_SL_MONTHLY_POS_PROD tsmp,
                </if>
                TB_MS_PRODUCT tmp,
                (
                    SELECT  STORE_CD,
                            SUBSTR(SALE_DATE,0,6) AS SALE_YM,
                            PROD_CD,
                            VAT_FG,
                            SUM(VAT_AMT) AS VAT_AMT,
                            SUM(REAL_SALE_AMT) AS REAL_SALE_AMT
                    FROM    TB_SL_SALE_DTL
                    WHERE   HQ_OFFICE_CD = #{hqOfficeCd}
                    <if test='storeCds != null and storeCds != ""'>
                        AND STORE_CD IN
                        <foreach collection="storeCdList" item="item" open="( " separator="," close=")" >
                            #{item}
                        </foreach>
                    </if>
                    AND     SALE_DATE BETWEEN #{yearMonth} || '01' AND #{yearMonth} || '31'
                    GROUP BY STORE_CD, SUBSTR(SALE_DATE,0,6), PROD_CD, VAT_FG
        ) tssd
                WHERE 1=1
                AND tsmp.HQ_OFFICE_CD = #{hqOfficeCd}
                <if test='storeCds != null and storeCds != ""'>
                    AND tsmp.STORE_CD IN
                    <foreach collection="storeCdList" item="item" open="( " separator="," close=")" >
                        #{item}
                    </foreach>
                </if>
                <if test="posNo != null and posNo != ''">
                    AND tsmp.POS_NO = #{posNo}
                </if>
                AND tsmp.SALE_YM = #{yearMonth}
                AND tssd.STORE_CD (+)=tsmp.STORE_CD
                AND tssd.PROD_CD (+)= tsmp.PROD_CD
                AND tmp.STORE_CD (+)= tsmp.STORE_CD
                AND tmp.PROD_CD (+)= tsmp.PROD_CD
                <!-- 본사 -->
                <if test='orgnFg == "H"'>
                    GROUP BY tsmp.HQ_OFFICE_CD, tmp.PROD_CLASS_CD, tsmp.PROD_CD, tmp.PROD_NM
                </if>
                <!-- 매장 -->
                <if test='orgnFg == "S"'>
                    GROUP BY tsmp.STORE_CD, tmp.PROD_CLASS_CD, tsmp.PROD_CD, tmp.PROD_NM
                </if>
            )
        )
        WHERE 1=1
        <!-- 본사 -->
        <if test='orgnFg == "H"'>
