<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--
    DlvrAgencyLink.xml
    배달대행사 연동
    ======================================================
    No  ||  수정자 ||  수정일자    ||  수정내역
    ======================================================
    1       이다솜     2025.10.14     최초작성
-->
<mapper namespace="kr.co.solbipos.dlvr.info.dlvrAgencyLink.service.impl.DlvrAgencyLinkMapper">

    <!-- 개발/운영 Api URL 조회 -->
    <!--
        TABLE    : TB_CM_API_LINK_INFO
        PARAM    : dlvrAgencyLinkVO
        COMMENTS : 개발/운영 Api URL을 조회한다.
    -->
    <select id="getApiUrl" parameterType="dlvrAgencyLinkVO" resultType="DefaultMap">
        /* USE : DlvrAgencyLinkMapper.getApiUrl */
        SELECT  FN_GET_API_URL(#{storeCd}, #{apiInfo}, #{apiUrl}) AS ${apiUrl}
        ,       FN_GET_API_URL(#{storeCd}, #{apiInfo}, #{apiKey}) AS ${apiKey}
        FROM    DUAL
    </select>

</mapper>